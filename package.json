{
  "name": "research-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Research portfolio focusing on world-class publications and academic projects.",
  "scripts": {
    "sass:build": "npx sass ./assets/scss/main.scss ./assets/css/styles.css --style=compressed --no-source-map",
    "sass:watch": "npx sass ./assets/scss/main.scss ./assets/css/styles.css --watch",
    "postcss:build": "npx postcss ./assets/css/styles.css -r --no-map",
    "build:css": "npm run sass:build && npm run postcss:build",
    "watch:css": "npm run sass:watch",
    "dev": "npm run sass:dev",
    "build": "npm run build:css",
    "lint:scss": "stylelint \"assets/scss/**/*.scss\"",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore _site --ignore vendor",
    "lint": "npm run lint:scss && npm run lint:js && npm run lint:md",
    "format": "prettier --write \"**/*.{html,md,js,json,scss}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "jekyll",
    "portfolio",
    "research",
    "sass"
  ],
  "author": "Syafiq Hadzir",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "markdownlint-cli": "^0.43.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.0.0",
    "sass": "^1.88.0",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0"
  },
  "main": "sw.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syafiqhadzir/research.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/syafiqhadzir/research/issues"
  },
  "homepage": "https://github.com/syafiqhadzir/research#readme"
}
